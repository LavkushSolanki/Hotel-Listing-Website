<% layout('/layouts/boilerplate') -%>
<div class="row">
  <div class="col-8 offset-2">
    <br />
    <br />
    <h2>Create New Listing</h2>
    <form action="/listings" method="post" enctype="multipart/form-data" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          required
          class="form-control"
          type="text"
          name="listing[title]"
          placeholder="Enter Title"
        />
        <div class="valid-feedback">Title Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="from-label">Description</label>
        <textarea
          required
          class="form-control"
          name="listing[description]"
          id=""
          placeholder="enter description"
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>
      <div class="mb-3">
        <label for="image" class="from-label">Upload Listing Image</label>
        <input
          class="form-control"
          type="file"
          name="listing[image]"
          placeholder="Enter image URL/link"
        />
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
            <label for="price" class="from-label">Price</label>
            <input
              required
              type="number"
              name="listing[price]"
              class="form-control"
              placeholder="1200"
            />
            <div class="invalid-feedback">Price Should be valid</div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3">
            <label for="location" class="from-label">Location</label>
            <input
              required
              class="form-control"
              type="text"
              name="listing[location]"
              placeholder="Jharsuguda,Odisha"
            />
            <div class="invalid-feedback">Location name should be valid</div>
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="country" class="from-label">Country</label>
        <input
          required
          type="text"
          class="form-control"
          name="listing[country]"
          placeholder="India"
        />
        <div class="invalid-feedback">Country name should be valid</div>
      </div>
      <button class="btn btn-dark add-btn">Submit</button>
      <br />
      <br />
    </form>
  </div>
</div>
